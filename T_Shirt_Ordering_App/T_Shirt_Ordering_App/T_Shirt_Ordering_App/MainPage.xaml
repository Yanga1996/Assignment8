<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T_Shirt_Ordering_App.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Yanga's T-shirt Shopping App!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Placeholder="Name" x:Name="nameEntry"/>
        <Entry Placeholder="Gender" x:Name="genderEntry"/>
        <Entry Placeholder="T-Shirt Size" x:Name="tShirtSizeEntry"/>
        <Entry Placeholder="Date of Order" x:Name="dateOdreEntry"/>
        <Entry Placeholder="T-Shirt Color" x:Name="tShirtColorEntry"/>
        <Entry Placeholder="Shipping Address" x:Name="shippingAddressEntry"/>
        <Button Text="Place order" x:Name="saveButtonEntry" Clicked="SaveBottun_Clicked"/>
        
   
    </StackLayout>

</ContentPage>
